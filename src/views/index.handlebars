<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <title>Products</title>
</head>
<body class="bg-black text-white">
<h1 class="text-center my-5">Productos</h1>

<section class="container-fluid overflow-x-hidden py-5">
    <div class="d-flex flex-column flex-md-row gap-3">
        <div class="w-100">
            <form id="search-form">
                <div class="mb-3">
                    <label for="category" class="form-label">Categoría:</label>
                    <input type="text" class="form-control" id="category" name="category">
                </div>
                <div class="mb-3">
                    <label for="availability" class="form-label">Disponibilidad:</label>
                    <select id="availability" class="form-select" name="availability">
                        <option value="">Todo</option>
                        <option value="true">Disponible</option>
                        <option value="false">No disponible</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="sort" class="form-label">Ordenado por precio:</label>
                    <select id="sort" class="form-select" name="sort">
                        <option value="asc">Ascendente</option>
                        <option value="desc">Descendente</option>
                    </select>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-lg btn-outline-primary">
                        <i class="fa-solid fa-magnifying-glass me-3"></i>Buscar</button>
                </div>
            </form>
        </div>

        <div class="row row-cols-1 row-cols-lg-2 row-cols-xl-3 g-4 justify-content-center">
            {{#each products}}
                <div class="col">
                    <div class="card border-primary bg-black text-white">
                        <div class="card-body">
                            <p class="card-text">_id: {{this._id}}</p>
                            <h5 class="card-title">{{this.title}}</h5>
                            <p class="card-text">{{this.description}}</p>
                            <p class="card-text">Precio: {{this.price}}</p>
                            <p class="card-text">Stock: {{this.stock}}</p>
                            <p class="card-text">Categoría: {{this.category}}</p>
                            <p class="card-text">Estado: {{this.status}}</p>
                            <div class="d-flex flex-column gap-3">
                                <button class="btn btn-lg btn-outline-success" onclick="addToCart('{{this._id}}')">
                                    <i class="fa-solid fa-cart-shopping me-3"></i>Agregar al carrito
                                </button>
                                <a class="btn btn-lg btn-outline-primary" href="/products/{{this._id}}">
                                    <i class="fa-solid fa-circle-info me-3"></i>Ver detalles
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</section>

{{#if products.length}}
    <section id="pagination" class="container-fluid text-center my-5">
        <div>
            {{#if hasPrevPage}}
                <a href="{{prevLink}}" class="btn btn-lg btn-primary me-3">Anterior</a>
            {{/if}}
            Página {{page}} de {{totalPages}}
            {{#if hasNextPage}}
                <a href="{{nextLink}}" class="btn btn-lg btn-primary ms-3">Siguiente</a>
            {{/if}}
        </div>
    </section>
{{else}}
    <h2 class="text-center">No se encontraron productos</h2>
{{/if}}

<script src="/socket.io/socket.io.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/index.js"></script>
</body>
</html>
