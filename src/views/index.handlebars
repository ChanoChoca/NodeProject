<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Products</title>
</head>
<body class="bg-black text-white">
<h1 class="text-center my-5">Productos</h1>

<section class="container-fluid overflow-x-hidden py-5">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 justify-content-center">
        {{#each products}}
        <div class="col">
            <div class="card border-primary bg-black text-white">
                <div class="card-body">
                    <p class="card-text">_id: {{this._id}}</p>

                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <p class="card-text">Precio: {{this.price}}</p>
                    <p class="card-text">Stock: {{this.stock}}</p>
                    <p class="card-text">Categor√≠a: {{this.category}}</p>
                    <p class="card-text">Estado: {{this.status}}</p>
                    <div class="d-flex flex-column gap-3">
                        <button class="btn btn-lg btn-primary" onclick="addToCart('{{this._id}}')">
                            <i class="fa-solid fa-cart-shopping me-3"></i>Agregar al carrito
                        </button>
                        <a class="btn btn-lg btn-primary" href="/products/{{this._id}}">
                            <i class="fa-solid fa-circle-info me-3"></i>Ver detalles
                        </a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</section>

<section class="container-fluid text-center my-5">
    <div>
        {{#if hasPrevPage}}
            <a href="{{prevLink}}" class="btn btn-lg btn-primary me-3">Anterior</a>
        {{/if}}
        Pagina {{page}} de {{totalPages}}
        {{#if hasNextPage}}
            <a href="{{nextLink}}" class="btn btn-lg btn-primary ms-3">Siguiente</a>
        {{/if}}
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>
</body>
</html>
