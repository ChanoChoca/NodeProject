<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Products</title>
</head>
<body>
<h1>Productos</h1>

<section class="row row-cols-3 g-3">
    {{#each products}}
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text">{{this.description}}</p>
                <button class="btn btn-primary" onclick="addToCart('{{this._id}}')">Agregar al carrito</button>
                <a class="btn btn-primary" href="/products/{{this._id}}">Ver detalles</a>
            </div>
        </div>
    {{/each}}
</section>

<div>
    {{#if hasPrevPage}}
        <a href="{{prevLink}}" class="btn btn-secondary">Previous</a>
    {{/if}}
    Page {{page}} of {{totalPages}}
    {{#if hasNextPage}}
        <a href="{{nextLink}}" class="btn btn-secondary">Next</a>
    {{/if}}
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>
</body>
</html>
